<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Punchline</th>
      <th>Description</th>
      <th>Status</th>
      <th>Owner</th>
      <th>Assignee</th>
      <th>Parent</th>
      <th>Difficulity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.image %></td>
        <td><%= project.punchline %></td>
        <td><%= project.description %></td>
        <td><%= project.status %></td>
        <td><%= project.owner_id %></td>
        <td><%= project.assignee_id %></td>
        <td><%= project.parent_id %></td>
        <td><%= project.difficulity %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

